<div>
  <h1>Add a New Answer</h1>
  <form>
    <div class='form-group'>
      <label for="author">Enter Your Name: </label>
      {{input value=author id="author"}}
    </div>

    <div class='form-group'>
      <label for="answer">Enter Your Answer: </label>
      {{textarea value=answer id="answer"}}
    </div>
    <button {{action 'makeNewAnswer'}}>Add Answer</button>
  </form>
</div>
