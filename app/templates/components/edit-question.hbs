{{#if showEditForm}}
  <div>
    <h2>Edit This Question: </h2>
    <form>
      <div class='form-group'>
        <label for="author">Enter Author Name: </label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class='form-group'>
        <label for="userQuestion">Enter Question: </label>
        {{textarea class="form-control" value=userQuestion id="userQuestion" placeholder=question.userQuestion}}
      </div>

      <div class='form-group'>
        <label for="notes">Enter Additional Notes: </label>
        {{textarea class="form-control" value=notes id="notes" placeholder=question.notes}}
      </div>

      <div class='form-group'>
        <legend>Categories</legend>
        <select class="form-control" onchange={{action "selectTag" value="target.value"}}>
          {{#each tags as |tagChoice|}}
            <option id="tags" value={{tagChoice}} selected={{tagChoice}}>{{tagChoice}}</option>
          {{/each}}
        </select>
      </div>


      <button {{action 'updateQuestion' question}}>Update Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'showEditQuestionForm'}}>Edit Question</button>
{{/if}}
