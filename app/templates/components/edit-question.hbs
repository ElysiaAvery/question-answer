{{#if showEditForm}}
  <div>
    <h2>Edit This Question: </h2>
    <form>
      <div class='form-group'>
        <label for="author">Enter Author Name: </label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class='form-group'>
        <label for="userQuestion">Enter Question: </label>
        {{textarea value=userQuestion id="userQuestion" placeholder=question.userQuestion}}
      </div>

      <div class='form-group'>
        <label for="author">Enter Additional Notes: </label>
        {{textarea value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'updateQuestion' question}}>Update Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'showEditQuestionForm'}}>Edit Question</button>
{{/if}}
