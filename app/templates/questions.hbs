<div class="col-sm-3"></div>
<div class="col-sm-6">
  <h4><strong>{{model.userQuestion}}</strong></h4>
  <h4><em>By: {{model.author}}</em></h4>
  <p>{{model.notes}}</p>
</div>
<h4>Answers: </h4>
<ul>
  {{#each model.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
  {{/each}}
</ul>
<button {{action 'destroyQuestion' model}}>Delete Question</button>
{{edit-question updateQuestion='updateQuestion' question=model}}
{{new-answer saveAnswer="saveAnswer" question=model}}
<div class="col-sm-3"></div>
